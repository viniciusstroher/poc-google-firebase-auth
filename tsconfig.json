{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir" : "./",
    "paths": {
      "@root/*": ["./*"],
      "@config/*": ["./config/*"],
      "@app/*": ["./src/*"],
      "@test/*": ["./test/*"]
    }
  }
}
